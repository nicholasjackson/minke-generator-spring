<%= SERVICE_NAME %>:
  image: <%= SERVICE_NAME %>
  ports:
    - "8080:8080"
  environment:
    - "CONSUL_URI=consul:8500"
    - "CONSUL_WAIT=1s:1s"
    - "CONSUL_STALE=0s"
    - "CONFIG_DIR=/config"
  links:
    - consul:consul
consul:
  image: progrium/consul
  ports:
    - "9400:8400"
    - "9500:8500"
    - "9600:53/udp"
  hostname: node1
  command: "-server -bootstrap -ui-dir /ui"
registrator:
  image: 'gliderlabs/registrator:latest'
  links:
    - consul:consul
  command: '-internal -tags=dev consul://consul:8500'
  volumes:
    - '/var/run/docker.sock:/tmp/docker.sock'
