---
application_name: '<%= SERVICE_NAME %>'
namespace: '<%= NAMESPACE %>'
docker_registry:
  url: <%%= ENV['DOCKER_REGISTRY_URL'] %>
  user: <%%= ENV['DOCKER_REGISTRY_USER'] %>
  password: <%%= ENV['DOCKER_REGISTRY_PASS'] %>
  email: <%%= ENV['DOCKER_REGISTRY_EMAIL'] %>
  namespace: <%%= ENV['DOCKER_NAMESPACE'] %>
docker:
  docker_file: './dockerfile/<%= SERVICE_NAME %>/'
  compose_file: './dockercompose/<%= SERVICE_NAME %>/docker-compose.yml'
  build:
    docker_file: './dockerfile/build/'
run:
  consul_loader:
    enabled: true
    config_file: './consul_keys.yml'
    url: <%%= "http://#{ENV['DOCKER_IP']}:9500" %>
cucumber:
  consul_loader:
    enabled: true
    config_file: './consul_keys.yml'
    url: <%%= "http://#{ENV['DOCKER_IP']}:9500" %>
  health_check:
    enabled: true
    url: <%%= "http://#{ENV['DOCKER_IP']}:8080/health" %>
after_build:
  copy_assets:
    -
      from: '../target/<%= SERVICE_NAME %>-0.0.1-SNAPSHOT.jar'
      to: './dockerfile/<%= SERVICE_NAME %>'
